<html>

<head>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/css/materialize.min.css">
  <style>
    body {
      display: flex;
      min-height: 100vh;
      flex-direction: column;
    }

    main {
      flex: 1 0 auto;
    }

    body {
      background: #fff;
    }

    .input-field input[type=date]:focus + label,
    .input-field input[type=text]:focus + label,
    .input-field input[type=email]:focus + label,
    .input-field input[type=password]:focus + label {
      color: #e91e63;
    }

    .input-field input[type=date]:focus,
    .input-field input[type=text]:focus,
    .input-field input[type=email]:focus,
    .input-field input[type=password]:focus {
      border-bottom: 2px solid #e91e63;
      box-shadow: none;
    }
    .google {
    background-color: #dd4b39 !important;
    }
    .kakao {
    background-color: #fffc00 !important;
    color: #65412b !important;
    }
    .login-text{
          color: #00020c !important;
          font-size: 40px !important;
    }
  </style>
</head>

<body>
  <div class="section"></div>
  <main>
    <center>
      <div class="section"></div>

      <h5 class="login-text"><strong>로그인</strong></h5>
      <div class="section"></div>

      <div class="container">
        <div class="z-depth-1 grey lighten-4 row" style="display: inline-block; padding: 32px 48px 0px 48px; border: 1px solid #EEE;">

           <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class='row'>
              <div class='col s12'>
              </div>
            </div>
            
            <div class='row'>
              <div class='input-field col s12'>
                 <%= f.input :email, required: false, autofocus: true %>
              </div>
            </div>

            <div class='row'>
              <div class='input-field col s12'>
                <%= f.input :password, required: false %>
              </div>
            </div>

            <br />
            <center>
              <div class='row'>
                <%= f.button :submit, "Log in" , :class => 'col s12 btn btn-large waves-effect indigo' %>
              </div>
          <% end %>
          
              <div class='row'>
                 <a href="/users/auth/google_oauth2" class='col s12 btn btn-large waves-effect google'>Google Login</a><br>
              </div>
              <div class='row'>
                <a href="/users/auth/kakao" class='col s12 btn btn-large waves-effect kakao'>Sign_In_With_Kakao</a>
              </div>
             
               
        </div>
      </div>
								<a class='pink-text' href="/users/password/new"><b>Forgot Password?</b></a>
							  <a class='pink-text' href="/users/sign_up"><b>Sign up</b></a><br>
					
    </center>

    <div class="section"></div>
    <div class="section"></div>
  </main>

  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.1/jquery.min.js"></script>
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/js/materialize.min.js"></script>
</body>

</html>